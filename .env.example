DATABASE_URL=sqlite:///./data/app.db

# Primary LLM Backend (LM Studio)
LLM_BASE_URL=http://localhost:1234
LLM_MODEL=local-model
LLM_TIMEOUT_SECONDS=30

# Fallback: Ollama (uncomment to enable)
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama2

# Fallback: OpenAI (uncomment to enable)
# OPENAI_API_KEY=sk-...
# OPENAI_MODEL=gpt-3.5-turbo

# Fallback: Anthropic (uncomment to enable)
# ANTHROPIC_API_KEY=sk-ant-...
# ANTHROPIC_MODEL=claude-3-haiku-20240307

# Rate limiting
LLM_RATE_LIMIT_PER_MINUTE=30

# Agent runner
ENABLE_AGENT_RUNNER=true
AGENT_LOOP_INTERVAL_SECONDS=2
MAX_AGENTS=10
